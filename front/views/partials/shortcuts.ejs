                <span id="FriendsCount"><%=userFirendLength%></span>
           <% } %>
        </li>

        <li>
            <i class="ti-image"></i>
            <a href="/photos/<%=userId%>" title="">images</a>
        </li>

        <li>
            <i class="ti-comments-smiley"></i>
            <a href="/messages" title="">Messages</a>
        </li>
        
       <li id="Logout">
            <i class="ti-power-off"></i>
            <a href="/login" title="">Logout</a>
        </li>
    </ul>
</div>