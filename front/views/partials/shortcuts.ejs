<div class="widget">
    <h4 class="widget-title">Shortcuts</h4>
    <ul class="naves">
        <li>
            <i class="ti-clipboard"></i>
            <a href="/home" title="">News feed</a>
        </li>
        <li>
            <i class="ti-files"></i>
            <a href="/profile/<%=userId%>" title="">My pages</a>
        </li>
        <li id="FriendsButton"> 
            <i class="ti-user"></i>
            <a href="/friends" title="">friends</a>
