													<img width = "60px" height="60px" src="/images/resources/<%=post.author.profilePhotos%>" alt="">
												</figure>
												<div class="friend-name">
													<ins><a id='<%=post._id%>'  title=""><%=post.author.name%></a></ins>
													<span>published: <%=post.time%></span>
												<% if(userId == userReqParamId) { %>
													<button id="<%=post._id%>" class="editButton" onclick="editPostFunc(this)"><i class='far fa-edit'></i></button>
												     <button id="<%=post._id%>" class="deleteButton" onclick="deletePost(this)"><i class="far fa-trash-alt"></i></button>  
												<% } %>	
												</div>

												<div class="description">
												<p><%=post.text%></p>
												</div>
												<% if (post.photo) { %>
													<img width = "400px" height = "300px" src="/images/resources/<%=post.photo%>">
													<% } %>
											</div>
										</div>
									</div>
								<% }) } else {%>
